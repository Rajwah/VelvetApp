<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context="com.example.ralha.velvetapp.HomePage">

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="36dp"
        android:layout_height="32dp"
        android:clickable="true"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" android:focusable="true"/>

    <android.support.design.widget.TabLayout
        android:layout_width="398dp"
        android:layout_height="59dp"
        android:layout_marginTop="412dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchView"
        app:tabIndicatorColor="@color/common_google_signin_btn_text_dark_disabled"
        app:tabTextAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle">

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:icon="@drawable/favorite"
            android:text="@string/love" android:focusable="true"/>

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:icon="@drawable/lend"
            android:text="@string/lend" android:focusable="true" />

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:icon="@drawable/shopping"
            android:text="@string/bag" android:focusable="true" />

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:icon="@drawable/ord"
            android:text="@string/orders" android:focusable="true" />

        <android.support.design.widget.TabItem
            android:id="@+id/Account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:icon="@drawable/account"
            android:text="@string/account" android:focusable="true" />

    </android.support.design.widget.TabLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_vertical_margin"
        android:layout_marginVertical="@dimen/activity_vertical_margin"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:contentDescription="@string/filter"
        app:srcCompat="@drawable/filter"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="335dp"
        tools:layout_editor_absoluteY="8dp" android:focusable="true" />

</android.support.constraint.ConstraintLayout>



